<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mKen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imageView"
        android:layout_marginBottom="-35dp"
        android:gravity="center_horizontal"
        android:text="Кёнигсберг"
        android:textColor="@android:color/black"
        android:textSize="27sp" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="324dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Обновить"
            android:onClick="finalSelection"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:text="Выбрать город" />


    </LinearLayout>

    <CheckBox
        android:id="@+id/mVlas"
        android:layout_width="412dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="608dp"
        android:onClick="selectItem"
        android:text="Влажность" />

    <CheckBox
        android:id="@+id/mOblako"
        android:layout_width="419dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="-3dp"
        android:layout_marginBottom="584dp"
        android:onClick="selectItem"
        android:text="Облачность" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:padding="15dp"
        app:srcCompat="@drawable/android_gerb" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/buttonsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="252dp"
        android:text=" Температура"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="138dp"
        android:layout_height="126dp"
        android:layout_alignBottom="@+id/buttonsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="138dp"
        android:layout_marginBottom="135dp"
        android:text="+1°C"
        android:textAlignment="center"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignBottom="@+id/buttonsLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="148dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="98dp"
        app:srcCompat="@drawable/cloud" />


    <TextView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="-236dp"
        android:layout_marginBottom="278dp"
        android:text=""
        android:textSize="25dp" />

    <TextView
        android:id="@+id/display2"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="-236dp"
        android:layout_marginBottom="278dp"
        android:text=""
        android:textSize="25dp" />

</RelativeLayout>